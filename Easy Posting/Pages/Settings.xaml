<UserControl x:Class="Easy_Posting.Content.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/account.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="계정 관리" Source="/Pages/account.xaml"/>                
                <mui:Link DisplayName="스킨 설정" Source="/Content/SettingsAppearance.xaml" />
                <mui:Link DisplayName="about" Source="/Content/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
